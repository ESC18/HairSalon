@model HairSalon.Models.Stylist

@{
    Layout = "_Layout";
}

<h2>Stylist Details</h2>
<p>
    <strong>Name:</strong> @Model.Name<br />
    <strong>Specialty:</strong> @Model.Specialty
</p>

<p>
    <a href="@Url.Action("Create", "Clients", new { stylistId = Model.Id })" class="btn btn-primary">Add Client</a>
</p>

@if (Model.Clients.Any())
{
    <h3>Clients</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Phone</td>
                    <td>@client.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No clients present.</p>
}

<p>
    <a href="@Url.Action("Index", "Stylists")" class="btn btn-secondary">Back to List</a>
</p>
