@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<p>
    <strong>Name:</strong> @Model.Name<br />
    <strong>Specialty:</strong> @Model.Specialty
</p>

<p>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Delete</a>
    <a href="@Url.Action("Create", "Clients", new { stylistId = Model.Id })" class="btn btn-primary">Add Client</a>
</p>

@if (Model.Clients != null && Model.Clients.Count > 0)
{
    <h3>Clients</h3>
    <ul>
        @foreach (var client in Model.Clients)
        {
            <li>
                @client.Name - @client.Phone - @client.Email
            </li>
        }
    </ul>
}
else
{
    <p>No clients present.</p>
}

<p>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</p>
