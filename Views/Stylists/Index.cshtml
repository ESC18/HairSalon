@model List<HairSalon.Models.Stylist>

@{
    Layout = "_Layout";
}

<h2>Welcome to Eau Claire's Salon!</h2>
<p><a href="@Url.Action("Create", "Stylists")" class="btn btn-primary">Add Stylist</a></p>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Specialty</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stylist in Model)
            {
                <tr>
                    <td>@stylist.Name</td>
                    <td>@stylist.Specialty</td>
                    <td>
                        <a href="@Url.Action("Details", "Stylists", new { id = stylist.Id })" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No stylists found.</p>
}
